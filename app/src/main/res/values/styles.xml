<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--萤石用到的-->
    <style name="LoadingTextView">
        <item name="textStyle">vertical</item>
        <item name="textColor">#adadad</item>
        <item name="textSize">@dimen/sp_12</item>
        <item name="textPadding">@dimen/dp_5</item>
        <item name="android:text">加载中，请稍候</item>
    </style>

    <style name="LoadingTextView_Percent" parent="LoadingTextView">
        <item name="textPadding">@dimen/dp_10</item>
        <item name="textSize">@dimen/sp_15</item>
        <item name="android:text" />
    </style>

    <style name="TitleBar_Dark">
        <item name="textColor">@android:color/white</item>
        <item name="background">@color/dark_bg_70p</item>
        <item name="backButton">@drawable/selector_ez_message_back</item>
    </style>
    <!-- 等待进度对话框样式 -->
    <style name="myDialog" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--提交按钮样式-->
    <style name="submitBtn">
        <item name="android:background">@drawable/shape_button_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:layout_marginRight">@dimen/dp_15</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <!--Tabbar-->
    <style name="Tabbar">
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/selector_tv_tabbar</item>
    </style>

    <!--首页工具导航圆圈形状-->
    <style name="HomeToolsShape">
        <item name="android:layout_width">@dimen/dp_36</item>
        <item name="android:layout_height">@dimen/dp_36</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
    <!--首页工具导航文字-->
    <style name="HomeToolsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <!--input container-->
    <style name="inputContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:layout_marginRight">@dimen/dp_15</item>
        <item name="android:background">@drawable/shape_border_bottom</item>
    </style>
    <!--input label-->
    <style name="inputLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:textColor">@color/inputLabel</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>
    <!--input edit-->
    <style name="inputEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/inputLabel</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="popwindowUpAnim">
        <item name="android:windowEnterAnimation">@anim/fade_up</item>
        <item name="android:windowExitAnimation">@anim/fade_down</item>
    </style>

    <style name="Theme.ched" parent="android:style/Theme.Light">   
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Button.No.Shader" parent="@style/Widget.AppCompat.Button.Borderless">

    </style>


</resources>
